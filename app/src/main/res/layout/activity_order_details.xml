<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails">

    <TextView
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="32dp"
        android:text="Order Detail"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/order"
        android:text="Dan\nStore: Cihampelas\nPizza Ordered"
        android:layout_margin="16dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/deliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/details"
        android:textSize="32dp"
        android:text="Pengiriman"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <CheckBox
        android:id="@+id/ambil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/deliver"
        android:text="Ambil Sendiri"
        android:layout_margin="16dp"
        android:textSize="20dp" />
    <CheckBox
        android:id="@+id/fastdelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ambil"
        android:text="Fast Delivery"
        android:layout_margin="16dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/doneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fastdelivery"
        android:text="Done"
        android:textSize="24dp"
        android:textStyle="bold" />



</androidx.constraintlayout.widget.ConstraintLayout>