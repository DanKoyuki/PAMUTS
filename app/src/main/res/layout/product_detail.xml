<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductDetail">

    <ImageView
        android:id="@+id/productImage2"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:src="@drawable/pizzafood"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/productName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Pizza"
        android:textSize="36dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productImage2"
        android:text="Price: Rp. 66.000,-"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:id="@+id/productDesc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Lore Ipsum"
        app:layout_constraintTop_toBottomOf="@+id/productPrice"/>

    <Button
        android:id="@+id/orderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productDesc2"
        android:layout_margin="16dp"
        android:text="Order"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/orderBtn"
        android:layout_margin="16dp"
        android:text="Back"
        android:textStyle="bold"/>





</androidx.constraintlayout.widget.ConstraintLayout>